<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/rounded_corner_item_background"
    android:backgroundTint="#F1F1F1"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewItemResponseShopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Madina Communications"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:transitionName="transitionName_username" />

            <TextView
                android:id="@+id/textViewItemResponseQuote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="0"
                android:text="5050"
                android:textColor="#26A69A"
                android:textSize="20sp"
                android:transitionName="transitionName_brand" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewItemResponseDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="My phone's screen is broken, how much it will cost?"
            android:transitionName="transitionName_description" />

        <TextView
            android:id="@+id/textViewItemResponseTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="4 hours ago"
            android:transitionName="transitionName_model" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>